@model WebBanHang.Models.HomeModels
@{
    ViewBag.Title = "Home Page";
}



<div class="container">

    <section class="section-main padding-y">
        <main class="card">
            <div class="card-body">

                <div class="row">
                    <aside class="col-lg col-md-3 flex-lg-grow-0">
                        <h6>DANH MỤC</h6>
                        <nav class="nav-home-aside">
                            <ul class="menu-category">
                                @foreach (var m in Model.ListCategory)
                                {
                                    <li>
                                        @*<a href="#">@m.Name</a>*@
                                        @Html.ActionLink(m.Category_Name, "ProductCategory", "Category", new { @id = m.Id }, null)

                                    </li>
                                }
                            </ul>
                        </nav>
                        <br />
                        <h6>Thương Hiệu</h6>
                        <nav class="nav-home-aside">
                            <ul class="menu-category">
                                <li class="nav-item">
                                    <a class="nav-link" href="~/Brand/ProductBrand/1">Adidas </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="~/Brand/ProductBrand/2">MLB</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="~/Brand/ProductBrand/3">Nike </a>
                                </li>

                            </ul>
                        </nav>
                    </aside>
                    <div class="col-md-9 col-xl-7 col-lg-7">


                        <div id="carousel1_indicator" class="slider-home-banner carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target="#carousel1_indicator" data-slide-to="0" class="active"></li>
                                <li data-target="#carousel1_indicator" data-slide-to="1"></li>
                                <li data-target="#carousel1_indicator" data-slide-to="2"></li>
                            </ol>
                            <div class="carousel-inner">
                                <div class="carousel-item active">

                                    <img src="~/Content/images/banners/slide1-0.jpg" alt="First slide">
                                </div>
                                <div class="carousel-item">
                                    <img src="~/Content/images/banners/slide2-0.jpg" alt="Second slide">
                                </div>
                                <div class="carousel-item">
                                    <img src="~/Content/images/banners/slide3-0.jpg" alt="Third slide">
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carousel1_indicator" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Trước</span>
                            </a>
                            <a class="carousel-control-next" href="#carousel1_indicator" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Sau</span>
                            </a>
                        </div>


                    </div>
                    <div class="col-md d-none d-lg-block flex-grow-1">
                        <aside class="special-home-right">
                            <h6 class="bg-blue text-center text-white mb-0 p-2">Danh mục phổ biến</h6>
                            <div class="card-banner border-bottom">
                                <div class="py-3" style="width:80%">
                                    <h6 class="card-title">Áo Thun</h6>
                                    <a href="~/Category/ProductCategory/1" class="btn btn-secondary btn-sm"> Hiển Thị </a>
                                </div>

                                <img src="~/Content/images/1-1.jpg" height="80" class="img-bg" />
                            </div>
                            <div class="card-banner border-bottom">
                                <div class="py-3" style="width:80%">
                                    <h6 class="card-title">Giày</h6>
                                    <a href="~/Category/ProductCategory/2" class="btn btn-secondary btn-sm"> Hiển Thị </a>
                                </div>

                                <img src="~/Content/images/2.jpg" height="80" class="img-bg" />
                            </div>
                            <div class="card-banner border-bottom">
                                <div class="py-3" style="width:80%">
                                    <h6 class="card-title">Áo Khoác</h6>
                                    <a href="~/Category/ProductCategory/0" class="btn btn-secondary btn-sm"> Hiển Thị </a>
                                </div>

                                <img src="~/Content/images/3.jpg" height="80" class="img-bg" />
                            </div>
                        </aside>
                    </div>
                </div>

            </div>
        </main>

    </section>

    <section class="padding-bottom">
        <div class="card card-deal">
            <div class="col-heading content-body">
                <header class="section-heading">
                    <h3 class="section-title">Ưu đãi</h3>
                    <p>Tất cả sản phẩm</p>
                </header>
                <div class="timer">
                    <div> <span class="num">04</span> <small>Ngày</small></div>
                    <div> <span class="num">12</span> <small>Giờ</small></div>
                    <div> <span class="num">58</span> <small>Phút</small></div>
                    <div> <span class="num">02</span> <small>Giây</small></div>
                </div>
            </div>
            <div class="row no-gutters items-wrap">
                @foreach (var item in Model.ListProduct.Where(n => n.TypeId == 1).Take(6))
                {
                    <div class="col-md col-6">
                        <figure class="card-product-grid card-sm">
                            <a href="@Url.Action("Detail", "Product", new { id = item.Id})" class="img-wrap">
                                <img src="@item.Avartar" width="50%" height="100">
                            </a>
                            <div class="text-wrap p-3">
                                @*<a href="#" class="title">@item.Name</a>*@
                                @Html.ActionLink(item.Name, "Detail", "Product", new { id = item.Id }, null)
                                <div class="price-wrap">
                                    <span class="price">@item.Price ₫</span>
                                    <small class="text-muted">/1 Sản Phẩm</small>
                                </div>
                                <span class="badge badge-danger"> -10% </span>
                            </div>
                        </figure>
                    </div>
                }

            </div>
        </div>

    </section>



    <section class="padding-bottom">

        <header class="section-heading heading-line">
            <h4 class="title-section text-uppercase">Yêu cầu báo giá</h4>
        </header>

        <div class="row">
            <div class="col-md-8">
                <div class="card-banner banner-quote overlay-gradient" style="background-image: url('images/banners/baner9-0.jpg');">
                    <div class="card-img-overlay white">
                        <h3 class="card-title">Một cách dễ dàng để gửi yêu cầu đến với Alistyle</h3>
                        <p class="card-text" style="max-width: 400px">
                            Giày tốt hơn, cho phong cách tốt nhất
                        </p>
                        <a href="" class="btn btn-primary rounded-pill">Tìm hiểu thêm</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">

                <div class="card card-body">
                    <h4 class="title py-3">Yêu cầu báo giá</h4>
                    <form>
                        <div class="form-group">
                            <input class="form-control" name="" placeholder="Bạn đang tìm kiếm cái gì?" type="text">
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <input class="form-control" placeholder="Số lượng" name="" type="text">

                                <select class="custom-select form-control">
                                    <option>Thương hiệu</option>
                                    <option>Adidas</option>
                                    <option>MLB</option>
                                    <option>Nike</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group text-muted">
                            <p>Vui lòng đánh dấu vào ô được chọn</p>
                            <label class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" value="option1">
                                <div class="form-check-label">Yêu cầu báo giá</div>
                            </label>
                            <label class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" value="option2">
                                <div class="form-check-label">Yêu cầu xem thêm ảnh</div>
                            </label>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-warning">Yêu cầu báo giá</button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </section>
    <section class="padding-bottom">

        <header class="section-heading heading-line">
            <h4 class="title-section text-uppercase">MẶT HÀNG ĐƯỢC ĐỀ XUẤT </h4>
        </header>
       
        <div class="row">
            <div class=" col-md col-6">
                <div href="#" class="card card-product-grid">
                    <div class="row no-gutters items-wrap">
                        @foreach (var item in Model.ListProduct.Where(n => n.TypeId == 3).Take(6))
                        {
                            <div class="col-md col-6">
                                <figure class="card-product-grid card-sm">
                                    <a href="@Url.Action("Detail", "Product", new { id = item.Id})" class="img-wrap">
                                        <img src="@item.Avartar" width="50%" height="100">
                                    </a>
                                    <div class="text-wrap p-3">

                                        @Html.ActionLink(item.Name, "Detail", "Product", new { id = item.Id }, null)
                                        <div class="price-wrap">
                                            <span class="price">@item.Price ₫</span>
                                            <small class="text-muted">/1 Sản Phẩm</small>
                                        </div>
                                        <span class="badge badge-danger"> -10% </span>
                                    </div>
                                </figure>
                            </div>
                        }

                    </div>
                    <div class="row no-gutters items-wrap">
                        @foreach (var item in Model.ListProduct.Where(n => n.TypeId == 2).Take(6))
                        {
                            <div class="col-md col-6">
                                <figure class="card-product-grid card-sm">
                                    <a href="@Url.Action("Detail", "Product", new { id = item.Id})" class="img-wrap">
                                        <img src="@item.Avartar" width="50%" height="100">
                                    </a>
                                    <div class="text-wrap p-3">
                                        @*<a href="#" class="title">@item.Name</a>*@
                                        @Html.ActionLink(item.Name, "Detail", "Product", new { id = item.Id }, null)
                                        <div class="price-wrap">
                                            <span class="price">@item.Price ₫</span>
                                            <small class="text-muted">/1 Sản Phẩm</small>
                                        </div>
                                        <span class="badge badge-danger"> -10% </span>
                                    </div>
                                </figure>
                            </div>
                        }

                    </div>
                </div>
            </div> 
          
        </div> 
    </section>


   

    <article class="my-4">
        <img src="~/Content/images/banners/AD-SM.png" class="w-100">
    </article>
</div>

<section class="section-subscribe padding-y-lg">
    <div class="container">

        <p class="pb-2 text-center text-white">Cung cấp các sản phẩm và tin tức về sản phẩm mới vào hộp thư đến của bạn.</p>

        <div class="row justify-content-md-center">
            <div class="col-lg-5 col-md-6">
                <form class="form-row">
                    <div class="col-md-8 col-7">
                        <input class="form-control border-0" placeholder="Email của bạn" type="email">
                    </div> 
                    <div class="col-md-4 col-5">
                        <button type="submit" class="btn btn-block btn-warning"> <i class="fa fa-envelope"></i> Gửi</button>
                    </div> 
                </form>
                <small class="form-text text-white-50">Chúng tôi sẽ không bao giờ chia sẻ địa chỉ email của bạn với người khác. </small>
            </div> 
        </div>


    </div>
</section>
