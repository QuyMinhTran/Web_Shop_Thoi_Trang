@model WebBanHang.Models.User

@{
    ViewBag.Title = "Edit";
    

    Layout="~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <br />
                <h2> Edit Users</h2>

                @using (Html.BeginForm("Create", "Users", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.Id)
                    <div class="form-horizontal">
                        <hr />
                        @Html.ValidationSummary(true)
                        <div class="text-success">
                            @ViewBag.CreateProError
                        </div>
                        <div class="form-group col-lg-5">
                            <label>Mã Users</label>
                            @Html.EditorFor(model => model.Id, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập mã sản phẩm..." } })
                            <div class="text-danger">@Html.ValidationMessageFor(model => model.Id)</div>

                            <label>FirstName</label>
                            @Html.EditorFor(model => model.FirtName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập mã sản phẩm..." } })
                            <div class="text-danger">@Html.ValidationMessageFor(model => model.FirtName)</div>
                            <label>LastName</label>
                            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập mã sản phẩm..." } })
                            <div class="text-danger">@Html.ValidationMessageFor(model => model.LastName)</div>

                            <label>Email</label>
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập tên sản phẩm..." } })
                            <div class="text-danger">@Html.ValidationMessageFor(model => model.Email)</div>

                            <label>Password</label>
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Chọn ảnh sản phẩm..." } })
                            <div class="text-danger">@Html.ValidationMessageFor(model => model.Password)</div>



                            <br />

                            <div>
                                <input type="submit" value="Save" class="btn btn-default" />

                                <i class="fa fa-undo fa-fw"></i>@Html.ActionLink("Quay lại", "Index", "Users")
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
</div>