@model IEnumerable<WebBanHang.Models.User>
@{
    ViewBag.Title = "Search";

    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <br />
                <h2>User</h2>


                <hr />
                <br />
                <br />




                <form asp-action="Search" method="post">
                    <input type="text" name="searchTerm" />
                    <button class="btn btn-success" type="submit"><i class="fa fa-search"></i></button>
                </form>

                <br />
                <div class="panel-body" style="width:100%;height:500px;overflow:auto;">
                    <div class="table-responsive table-bordered">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>FirstName</th>
                                    <th>LastName</th>
                                    <th>Email</th>
                                    <th>Password</th>
                                    <th>IsAdmin</th>
                                    <th>Chức năng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {

                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.FirtName</td>
                                    <td>@item.LastName</td>
                                    <td>@item.Email</td>
                                    <td>@item.Password</td>
                                    <td>@item.IsAdmin</td>


                                    <td>
                                        <a href="@Url.Action("Edit", "Users", new { id = item.Id })"><i class="fa fa-pencil fa-fw" style="color:black"></i></a>
                                        <a href="@Url.Action("Details", "Users", new { id = item.Id })"><i class="fa fa-list-alt fa-fw"></i></a>
                                        <a onclick="return confirm('Bạn có chắc chắn muốn xoá User này?')" href="@Url.Action("Delete", "Users", new { id = item.Id })"><i class="fa fa-times fa-fw" style="color:red"></i></a>
                                    </td>
                                </tr>


                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>


