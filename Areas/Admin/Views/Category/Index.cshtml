@model IEnumerable<WebBanHang.Models.Category>

@{
    ViewBag.Title = "category";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="content-wrapper">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <br />
                <h2>Category</h2>

                <div class="text-warning" >
                    @ViewBag.ProError
                </div>
                <hr />
                <br />
                <br />

                <div style="width:100%;height:500px;overflow:auto; margin:0 auto;">
                    <div class="panel panel-default" >
                        <div class="panel-heading">
                            <a class="btn btn-primary btn-default" href="@Url.Action("Create", "Category")" role="button">Tạo loại sản phẩm mới</a><br />
                            <div class="form-group input-group navbar-right">
                                @using (Ajax.BeginForm("Search", "Category", new AjaxOptions { InsertionMode = InsertionMode.Replace, HttpMethod = "Post" }))
                                {
                                    <input type="text" name="searchTerm" class="form-control" style="width:300px" placeholder="Nhập tên loại sản phẩm..." />
                                    <button class="btn btn-success" type="submit">
                                        <i class="fa fa-search"></i>
                                    </button>
                                }
                            </div>
                        </div>
                        <div class="panel-body" style="width:100%;height:500px;overflow:auto; margin:0 auto;" >
                            <div class="table-responsive table-bordered">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Tên loại sản phẩm</th>
                                            <th>Hiển thị trang Home</th>
                                            <th>Chức năng</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.Id</td>
                                                <td>@item.Category_Name</td>
                                                <td>@item.ShowOnHomePage</td>

                                                <td>
                                                    <a href="@Url.Action("Edit", "Category", new { id = item.Id })"><i class="fa fa-pencil fa-fw" style="color:black"></i></a>
                                                    <a href="@Url.Action("Details", "Category", new { id = item.Id })"><i class="fa fa-list-alt fa-fw"></i></a>
                                                    <a onclick="return confirm('Bạn có chắc chắn muốn xoá sản phẩm này?')" href="@Url.Action("Delete", "Category", new { id = item.Id })"><i class="fa fa-times fa-fw" style="color:red"></i></a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                        </div>

                    </div>
                </div>
            </div>
         </div>
     </section>

</div>
