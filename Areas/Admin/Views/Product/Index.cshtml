@model IEnumerable<WebBanHang.Models.Product>
@{
    ViewBag.Title = "product";
}

   
<div class="content-wrapper">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <br />
                <h2>Product</h2>

                <div class="text-warning">
                    @ViewBag.ProError
                </div>
                <hr />
                <br />
                <br />

                <div style="width:100%;height:500px;overflow:auto; margin:0 auto;">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <a class="btn btn-primary btn-default" href="@Url.Action("Create", "Product")" role="button">Tạo sản phẩm mới</a><br />
                            <div class="form-group input-group navbar-right">
                                @using (Ajax.BeginForm("Search", "Product", new AjaxOptions { InsertionMode = InsertionMode.Replace, HttpMethod = "Post" }))
                                {
                                    <input type="text" name="searchTerm" class="form-control" style="width:300px" placeholder="Nhập tên  sản phẩm..." />
                                    <button class="btn btn-success" type="submit">
                                        <i class="fa fa-search"></i>
                                    </button>
                                }
                                    
                            </div>
                        </div>

                        <div class="panel-body" style="width:100%;height:500px;overflow:auto;">
                            <div class="table-responsive table-bordered">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Loại sản phẩm</th>
                                            <th>Hãng sản xuất</th>
                                            <th>Tên sản phẩm</th>
                                            <th>Hình ảnh</th>
                                            <th>Mô tả ngắn</th>
                                            <th>Mô tả chi tiết</th>
                                            <th>Đơn giá</th>
                                            <th>Chiết khấu (%)</th>
                                            <th>Chức năng</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.Id</td>
                                                <td>@item.Category.Category_Name</td>
                                                <td>@item.Brand.Brand_Name</td>
                                                <td>@item.Name</td>
                                                <td><img src="@item.Avartar" width="50" height="50" /></td>
                                                <td>@item.ShortDes</td>
                                                <td>@item.FullDescription</td>
                                                <td>@item.Price</td>
                                                <td>@item.PriceDiscount</td>

                                                <td>
                                                    <a href="@Url.Action("Edit", "Product", new { id = item.Id })"><i class="fa fa-pencil fa-fw" style="color:black"></i></a>
                                                    <a href="@Url.Action("Details", "Product", new { id = item.Id })"><i class="fa fa-list-alt fa-fw"></i></a>
                                                    <a onclick="return confirm('Bạn có chắc chắn muốn xoá sản phẩm này?')" href="@Url.Action("Delete", "Product", new { id = item.Id })"><i class="fa fa-times fa-fw" style="color:red"></i></a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>

</div>


