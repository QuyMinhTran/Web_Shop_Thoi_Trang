@model WebBanHang.Models.Product
@{
    ViewBag.Title = "Create";
}
<div class="content-wrapper">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <br />
                <h2> Create Product</h2>

                @using (Html.BeginForm("Create", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <hr />
                        @Html.ValidationSummary(true)
                        <div class="text-success">
                            @ViewBag.CreateProError
                        </div>
                        <div class="form-group col-lg-5">


                            <label>Loại sản phẩm</label>
                            @Html.EditorFor(model => model.CategoryId, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập tên sản phẩm..." } })
                            <div class="text-danger">@Html.ValidationMessageFor(model => model.CategoryId)</div>

                            <label>Hãng sản xuất</label>
                            @Html.EditorFor(model => model.BrandID, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập tên sản phẩm..." } })
                            <div class="text-danger">@Html.ValidationMessageFor(model => model.BrandID)</div>


                            <label>Tên sản phẩm</label>
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập tên sản phẩm..." } })
                            <div class="text-danger">@Html.ValidationMessageFor(model => model.Name)</div>

                            <label>Hình Ảnh</label>
                            @Html.EditorFor(model => model.Avartar, new { htmlAttributes = new { @class = "form-control", @placeholder = "Chọn ảnh sản phẩm..." } })
                            <div class="text-danger">@Html.ValidationMessageFor(model => model.Avartar)</div>
                            <label>Mô tả ngắn</label>
                            @Html.TextAreaFor(model => model.ShortDes, new { @class = "form-control", @placeholder = "Nhập mô tả sản phẩm..." })
                            <div class="text-danger">@Html.ValidationMessageFor(model => model.ShortDes)</div>
                            <label>Mô tả chi tiết</label>
                            @Html.TextAreaFor(model => model.FullDescription, new { @class = "form-control", @placeholder = "Nhập mô tả sản phẩm..." })
                            <div class="text-danger">@Html.ValidationMessageFor(model => model.FullDescription)</div>
                            <label>Đơn giá</label>
                            @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập đơn giá sản phẩm..." } })
                            <div class="text-danger">@Html.ValidationMessageFor(model => model.Price)</div>

                            <label>Chiết khấu</label>
                            @Html.EditorFor(model => model.PriceDiscount, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập chiết khấu (%)..." } })
                            <div class="text-danger">@Html.ValidationMessageFor(model => model.PriceDiscount)</div>



                            <br />

                            <div>
                                <input type="submit" value="Save" class="btn btn-default" />

                                <i class="fa fa-undo fa-fw"></i>@Html.ActionLink("Quay lại", "Index", "Product")
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
</div>

